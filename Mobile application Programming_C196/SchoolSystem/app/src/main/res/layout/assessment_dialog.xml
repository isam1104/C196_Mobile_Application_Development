<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/assessment_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assessment"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/start_date_edit_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start date"
        android:drawableRight="@android:drawable/ic_menu_my_calendar"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/assessment_title_edit"
        />
    <EditText
        android:id="@+id/due_date_edit_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due date"
        android:drawableRight="@android:drawable/ic_menu_my_calendar"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/start_date_edit_2"
        />
    <Spinner
        android:id="@+id/assessment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/due_date_edit_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="10dp"
        android:entries="@array/assessment_types"
        android:background="@android:color/holo_blue_light"
        />

</RelativeLayout>