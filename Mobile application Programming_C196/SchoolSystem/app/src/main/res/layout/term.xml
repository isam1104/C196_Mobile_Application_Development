<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:backgroundTintMode="add"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/termname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term"
                android:textColor="@android:color/holo_purple"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/term_dates_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/termname"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-02-03"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" to " />

                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-03-02"
                    android:textColor="@android:color/holo_red_light" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/updatebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_edit_24"
                android:background="@drawable/round_button"
                android:contentDescription="Edit" />
            <GridLayout
                android:id="@+id/this_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/term_dates_container"
                android:columnCount="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:text="Course1"
                    android:gravity="right"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/course_start_date"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:text="to"
                    />
                <TextView
                    android:id="@+id/course_end_date"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    />
            </GridLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>